@Model List<ToDoList>
	@{
		ViewData["Title"] = "Index";
		Layout = "~/Views/Layout/Index.cshtml";
		int count = 0;
	}



	<div class="content">
		<div class="container-fluid">
			@* <h4 class="page-title">Tables</h4> *@
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yapılacaklar</div>
						</div>
						<div class="card-body">
							<table class="table table-head-bg-primary mt-4">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">İçerik</th>	
										<th scope="col">Tarih</th>
										<th scope="col">Durum</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
											@if (item.Status == true)
											{
												<td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId" class="btn btn-secondary">Yapılmadı Olarak Değiştir</a></td>

											}
											else
											{
												<td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-dark">Yapıldı Olarak Değiştir</a></td>

											}
											<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
											<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
							<a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>




