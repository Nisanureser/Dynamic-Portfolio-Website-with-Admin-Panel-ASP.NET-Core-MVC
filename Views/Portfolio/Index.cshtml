@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Projelerim</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-primary mt-4">
                            <thead>
                                <tr>
                                    <th scope="col">Portfolio Id</th>
                                    <th scope="col">Proje İsmi</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="Portfolio Image" style="max-width: 100px; max-height: 100px;">
                                        </td>

                                        <td>@item.Url</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
