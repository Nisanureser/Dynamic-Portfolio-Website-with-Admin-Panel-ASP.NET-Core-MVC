@* ANASAYFA İLETİŞİM KISMI  *@

@model List<MyPortfolioUdemy.DAL.Entities.Contact>

<section id="contact" style=" padding-top: 13.2rem; padding-bottom: 12rem; background-color:white">

    <div class="overlay"></div>
    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>Bize ulaşın</h3>
            <h1 style="color:black" >Say Hello.</h1>
            <p >
                Sorularınız veya projeleriniz için bize ulaşmaktan çekinmeyin.
            </p>
        </div>
    </div>

  

    <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 40px; max-width: 900px; margin: auto;">

        
        <form method="post" asp-controller="Message" asp-action="SendMessage" style="flex: 1 1 400px; display: flex; flex-direction: column; gap: 10px;">
            <input type="email" name="Email" placeholder="Email" required
                   style="padding: 10px 12px; border-radius: 16px; border: 1px solid #ccc; font-size: 13px;">
            <input type="text" name="NameSurname" placeholder="Name Surname" required
                   style="padding: 10px 12px; border-radius: 16px; border: 1px solid #ccc; font-size: 13px;">
            <input type="text" name="Subject" placeholder="Subject" required
                   style="padding: 10px 12px; border-radius: 16px; border: 1px solid #ccc; font-size: 13px;">
            <input type="text" name="MessageDetail" placeholder="Your message..." required
                       style="padding: 10px 12px; border-radius: 16px; border: 1px solid #ccc; font-size: 13px; height: 60px;">
           
            <button type="submit"
                    style="padding: 10px 0; background-color: #af2b2b; color: white; border: none; border-radius: 16px; font-size: 14px; cursor: pointer;">
                Submit
            </button>
        </form>

    
        <div style="flex: 1 1 300px; display: flex; flex-direction: column; gap: 16px;">
            @foreach (var item in Model)
            {
                <div style="background-color: #f9f9f9; padding: 15px; border-radius: 12px;">
                    <h4 style="margin: 0 0 5px 0; font-size: 15px; color: #af2b2b;">@item.Değer</h4>
                    <p style="margin: 0; font-size: 13px; color: #666;">@item.Alan</p>
                </div>
            }
        </div>

    </div>
</section>


