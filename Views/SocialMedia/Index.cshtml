@model List<SocialMedia>
	@{
		ViewData["Title"] = "Index";
		Layout = "~/Views/Layout/Index.cshtml";
		int count = 0;
	}
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Socail Media</div>
						</div>
						<div class="card-body">
							<table class="table table-head-bg-primary mt-4">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Social Media Icon</th>
										<th scope="col">Social Media </th>
										<th scope="col">URL</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Icon</td>
											<td>@item.Title</td>
											<td>@item.Url</td>
											<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
											<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



