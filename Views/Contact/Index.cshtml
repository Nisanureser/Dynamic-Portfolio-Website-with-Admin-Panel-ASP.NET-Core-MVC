@model List<Contact>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		@* <h4 class="page-title">Tables</h4> *@
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri</div>
					</div>
	<div class="card-body">
						<table class="table table-head-bg-primary mt-4">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Değer</th>
					<th scope="col">Alan</th>
					<th scope="col">Sil</th>
					<th scope="col">Güncelle</th>

				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td>@item.Değer</td>
						<td>@item.Alan</td>
						<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
						<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
					</tr>

				}
		</tbody>
	</table>
		<a href="/Contact/CreateContact/" class="btn btn-primary">Yeni İletişim Bilgisi</a>
	</div>
</div>

